@model AddTestimonialViewModel
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Comment</label>
    <input type="text" asp-for="Comment" class="form-control" />
    <br />
    <label>ImageURL</label>
    <input type="text" asp-for="CoverImg" class="form-control" />
    <br />
    <button class="btn btn-rounded btn-outline-primary">Save Comment</button>
    <a href="/AdminTestimonial/Index/" class="btn btn-rounded btn-outline-secondary">Cancel</a>
</form>

