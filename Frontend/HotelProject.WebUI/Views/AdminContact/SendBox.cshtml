@model List<ResultSendBoxDto>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
    <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Compose</a>
    <div class="mail-list mt-4">
        <a href="/AdminContact/Inbox/" class="list-group-item text-dark border-0 p-r-0">
            <i class="fa fa-inbox font-18 align-middle mr-2"></i>
            <b> Inbox</b>
            <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.inboxCount</span>
        </a>

        <a href="/AdminContact/SendBox/" class="list-group-item text-dark border-0 p-r-0">
            <i class="fa fa-paper-plane font-18 align-middle mr-2"></i>
            <b> Sent</b>
            <span class="badge badge-info badge-sm float-right m-t-5">@ViewBag.sendboxCount</span>
        </a>

        <a href="#" class="list-group-item border-0 text-dark p-r-0">
            <i class="fa fa-star-o font-18 align-middle mr-2"></i>
            <b> Important</b>
            <span class="badge badge-danger badge-sm float-right m-t-5">45</span>
        </a>

        <a href="#" class="list-group-item border-0 text-dark p-r-0"><i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i><b> Draft</b></a>

        <a href="#" class="list-group-item border-0 text-dark p-r-0"><i class="fa fa-trash font-18 align-middle mr-2"></i><b>Trash</b></a>
    </div>
    <h5 class="mt-5 m-b-10">Categories</h5>
    @await Html.PartialAsync("SidebarAdminContactCategoryPartial")
</div>
<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                SendBox
            </button>
        </div>
    </div>
    <div class="email-list m-t-15">
        @foreach (var item in Model)
        {
            <div class="message">
                <a href="/AdminContact/MessageDetailsBySendBox/@item.SendMessageID">
                    <div class="col-mail col-mail-1">
                        <div class="email-checkbox">
                            <input type="checkbox" id="chk2">
                            <label class="toggle" for="chk2"></label>
                        </div><span class="star-toggle ti-star"></span>
                    </div>
                    <div class="col-mail col-mail-2">
                        @if (item.Message.Length < 30)
                        {
                            <div class="subject"><b>Subject: @item.Subject</b> Receiver: @item.RecevierMail</div>
                        }
                        else

                        {
                            <div class="subject"><b>Subject: @item.Subject</b> Receiver: @item.RecevierMail</div>
                        }
                        <div class="date">@item.Date.ToString("h:mm tt")</div>
                    </div>
                </a>
            </div>
        }
    </div>
    <!-- panel -->
</div>