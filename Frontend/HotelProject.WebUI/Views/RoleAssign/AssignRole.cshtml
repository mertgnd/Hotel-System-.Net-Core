@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    @for(int i=0; i<Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId"/>
            <input type="hidden" asp-for="@Model[i].RoleName"/>
            <input type="checkbox" asp-for="@Model[i].RoleExists" class="form-check-input"/>
            <label class="form-check-label" for="@Model[i].RoleExists">@Model[i].RoleName</label>
        </div>
    }
    <br />
    <button class="btn btn-rounded btn-outline-success">Save Roles for User</button>
</form>

