@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="5" class="text-center text-danger">There is no data.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServiceID</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="/Service/DeleteService/@item.ServiceID" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-rounded btn-outline-danger">Delete</a>
                        <a href="/Service/UpdateService/@item.ServiceID" class="btn btn-rounded btn-outline-secondary">Update</a>
                    </td>
                    <td>
                        <a href="#" class="btn btn-rounded btn-outline-dark">Details</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a href="/Service/AddService/" class="btn btn-rounded btn-outline-info">Create New Service</a>

